<%= form_for @booking, html: {class: "form-horizontal"} do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="col-xs-6">
    <label>Contact details</label>
    <div class="field">
      <%= f.text_field :name, required: "required", placeholder: "Your name*" %>
    </div>
    <div class="field">
      <%= f.email_field :email, required: "required", placeholder: "Your email*" %>
    </div>
    <div class="field">
      <%= f.phone_field :phone, required: "required", placeholder: "Your phone*" %>
    </div>

  </div>


  <div class="col-xs-6">
    <label>Booking info</label>

    <div class="field">
      <%= f.text_field :pickup, required: "required", placeholder: "From" %>
    </div>
    <div class="field">
      <%= f.text_field :destiny, required: "required", placeholder: "To" %>
    </div>

    <div class="row">

      <div class="col-md-4">    
        <div class="field">
          <%= f.number_field :pax, min:1, max:120, step:1, placeholder: "Passengers" %>
        </div>
      </div>

      <div class="col-md-4">    
        <div class="field input-group date">
          <%= f.text_field :ondate, required: "required", placeholder: "yyyy/mm/dd"%>
          <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
      
      <div class="col-md-4">    
        <div class="field">
         <%= f.time_select :hour %>
        </div>
      </div>

    </div>

  </div>
  <div class="col-md-12"> 

    <div class="field">
      <%= f.text_area :comment, required: "required", placeholder: "Additional questions or comments" %>
    </div>
        <div class="field" style="margin: 20px auto; width: 50%;">
      <%= f.submit class: "button" %>
    </div>
</div>
<% end %>



<script type="text/javascript">
 $(function() {
    $('#booking_ondate').datepicker({
      todayHighlight: true,
      format: "yyyy/mm/dd",
      autoclose: true,
      startDate: "t",
    });
  });
</script>
